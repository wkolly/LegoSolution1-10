@{
    ViewData["Title"] = "Products";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Products</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
                    display: flex;
                    flex-wrap: wrap;
                    justify-content: space-around; /* This will add space around your items */
                    gap: 20px; /* This adds space between your flex items */
                    padding: 10px;
                }
        .card {
            border: solid 1px #ccc;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-bottom: 20px; /* Space at the bottom of each card */
            width: 300px; /* Width of the card */
        }
        .card img {
            max-width: 100%;
            height: auto;
            border-radius: .25rem; /* Slightly round corners of images */
            margin-bottom: 15px;
        }
        
        .card h3 {
            margin: 0;
            color: #333;
        }
        .card p {
            color: #666;
        }
        .price {
            color: #000;
            font-size: 1.2em;
            font-weight: bold;
        }
    </style>
</head>
<body>
<div class="container">
    @model IQueryable<Product>
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (Product p in Model)
    {
        <div class="card">
            <img src="@p.ImgLink" alt="@p.Name" />
            <h3>@p.Name</h3>
            <p class="price">$@p.Price</p>
            <p>Product details go here, such as color, dimensions, it's so fun.</p>
        </div>
    }
      </div>
    </div>
</div>
</body>
</html>